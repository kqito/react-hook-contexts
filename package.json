{
  "name": "use-global-context",
  "version": "0.0.1",
  "description": "",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm-run-all -s clean build:rollup",
    "build:rollup": "rollup -c",
    "test": "jest",
    "format": "npm-run-all -s format:*",
    "format:fix": "prettier --write './src/**/*.{ts,tsx,js,jsx,json}'",
    "format:lint": "eslint ./src --ext .ts,.tsx",
    "clean": "rimraf ./dist",
    "release": "np",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "context"
  ],
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kqito/use-global-context.git"
  },
  "author": "Nakagawa kaito",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kqito/use-global-context/issues"
  },
  "homepage": "https://github.com/kqito/use-global-context#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/polyfill": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@rollup/plugin-babel": "^5.2.0",
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^24.9.0",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "core-js": "^3.6.5",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "jest-dom": "^4.0.0",
    "lint-staged": "^10.0.7",
    "np": "^5.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rimraf": "^3.0.0",
    "rollup": "^2.26.7",
    "rollup-plugin-typescript2": "^0.27.2",
    "ts-jest": "^24.3.0",
    "typescript": "^4.0.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>setupTests.js"
    ],
    "transform": {
      "^.+\\.ts?(x)$": "ts-jest",
      "^.+\\.[tj]sx?$": "babel-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.test.ts",
      "**/*.test.tsx"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "prettier --write",
      "jest",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test",
      "...": "..."
    }
  }
}
